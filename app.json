{
  "expo": {
    "name": "wolontario-app",
    "slug": "wolontario-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splashscreen2.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "js",
        "jsx",
        "css"
      ]
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Aplikacja potrzebuje dostępu do twoich zdjęć abyś mógł używać ich np. jako zdjęcie profliowe"
      }
    },
    "android": {
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/appicon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.wolontario.wolontario"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Aplikacja potrzebuje dostępu do twoich zdjęć abyś mógł używać ich np. jako zdjęcie profliowe"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7dd9d417-28df-4641-b3e9-82cbe5acd9b6"
      }
    }
  }
}
